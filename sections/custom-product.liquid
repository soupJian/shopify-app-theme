<section>
  <div class="product-wrap">
    {% for block in section.blocks %}
      <div class="product-item">
            {% if block.settings.image == blank %}
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% else %}
                {% if block.settings.link_product.url != blank %}
                    <a href="{{ block.settings.link_product.url }}">
                            {% assign img_url = block.settings.link_product.featured_image | img_url: '500x500' %}
                            <img src="{{ img_url }} alt="" />
                    </a>
                {% else %}
                        {% assign img_url = block.settings.image | img_url: '500x500' %}
                        <img src="{{ img_url }} alt="" />
                 {% endif %}
             {% endif %}
      </div>
         {% endfor %}
  </div>
</section>
{% stylesheet %}
  .product-wrap{
    width:100%;
    height:300px;
    display:flex;
    column-gap:20px;
  }
  .product-item{
    display:block !important;
    flex: 1;
    background:pink;
  }
  .product0item a {
    width: 100%;
    height：100%;
    display:block;
  }
  .product-item img{
    width:100%;
    height:100%;
    object-fit: cover;
  }
{% endstylesheet %}
